{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@actions": ["./app/actions"],
      "@types": ["./app/types"],
      "@components": ["./app/components"],
      "@constants": ["./app/constants"],
      "@utils": ["./app/utils"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
