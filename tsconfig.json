{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "es2015", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@actions": ["src/renderer/actions"],
      "@types": ["src/renderer/types"],
      "@components/*": ["src/renderer/components/*"],
      "@config": ["src/renderer/config-store"],
      "@constants/*": ["src/renderer/constants/*"],
      "@utils": ["src/renderer/utils"],
      "@scraper": ["src/renderer/scraper"],
      "@lib/*": ["src/renderer/lib/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
